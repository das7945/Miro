<% layout("layouts/boilerplate") %>
<h1>로그인</h1>
<div class="mb-3">
  <form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input
        class="form-control"
        type="text"
        id="username"
        name="username"
        required
      />
      <div class="valid-feedback">Look good!</div>
    </div>

    <div class="mb-3">
      <label class="form-label" for="password">Password</label>
      <input
        class="form-control"
        type="password"
        id="password"
        name="password"
        required
      />
      <div class="valid-feedback">Look good!</div>
    </div>
    <button class="btn btn-success">로그인</button>
  </form>
</div>
